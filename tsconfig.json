  {
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": ["es2017", "dom"],
    "strict": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "outDir": "dist",
    "sourceMap": true,
    "inlineSources": true,
    "rootDir": "./",
    "allowJs": true,
    "declaration": true
  },
  "include": ["**/*.ts", "**/*.js"],
  "exclude": ["**/*.config.js", "**/*.conf.js", "node_modules/**/*", "test/**/*"],

}
